# Compiling & installing waybar

compile_waybar() {
    print_title "[!] COMPILING WAYBAR"
    cd /tmp || exit
    git clone https://github.com/Alexays/Waybar
    cd Waybar || exit
    meson build
    ninja -C build
    sudo ninja -C build install
}

